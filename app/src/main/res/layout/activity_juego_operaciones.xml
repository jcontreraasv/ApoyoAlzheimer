<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingTop="50dp"
    android:paddingHorizontal="25dp"
    tools:context=".juegos.JuegoOperacionesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="OPERACIONES"
                android:textStyle="bold"
                android:fontFamily="@font/galyon_bold"
                android:textColor="@color/colorBlanco"
                android:textSize="45dp">
            </TextView>

            <FrameLayout
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:layout_marginTop="120dp"
                android:layout_gravity="center"
                android:background="@color/colorBlanco">

                <TextView
                    android:id="@+id/operacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/galyon_bold"
                    android:text="5 / 5 = ?"
                    android:textAlignment="center"
                    android:textColor="@color/colorNegro"
                    android:textSize="45dp"
                    android:textStyle="bold">
                </TextView>
            </FrameLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_marginTop="65dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:background="@color/colorBlanco">

                            <TextView
                                android:onClick="boton1"
                                android:id="@+id/opcionesOperaciones1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Opcion1"
                                android:textStyle="bold"
                                android:fontFamily="@font/galyon_bold"
                                android:textColor="@color/colorNegro"
                                android:textSize="45dp"
                                android:textAlignment="center">
                            </TextView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="right"
                            android:background="@color/colorBlanco">

                            <TextView
                                android:id="@+id/opcionesOperaciones2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/galyon_bold"
                                android:onClick="boton2"
                                android:text="Opcion2"
                                android:textColor="@color/colorNegro"
                                android:textSize="45dp"
                                android:textStyle="bold"
                                android:textAlignment="center">
                            </TextView>
                        </FrameLayout>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="40dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:background="@color/colorBlanco">

                            <TextView
                                android:onClick="boton3"
                                android:id="@+id/opcionesOperaciones3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Opcion1"
                                android:textStyle="bold"
                                android:fontFamily="@font/galyon_bold"
                                android:textColor="@color/colorNegro"
                                android:textSize="45dp"
                                android:textAlignment="center">
                            </TextView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="right"
                            android:background="@color/colorBlanco">

                            <TextView
                                android:id="@+id/opcionesOperaciones4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/galyon_bold"
                                android:onClick="boton4"
                                android:text="Opcion2"
                                android:textColor="@color/colorNegro"
                                android:textSize="45dp"
                                android:textStyle="bold"
                                android:textAlignment="center">
                            </TextView>
                        </FrameLayout>
                    </TableRow>
                </TableLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>