<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio.OlvidarContraActivity"
    android:background="@color/b"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingHorizontal="50dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/apoyo2">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:textColor="@color/a"
                android:textSize="25dp"
                android:fontFamily="@font/galyon_bold">
            </TextView>

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/a"
                android:fontFamily="@font/galyon_bold"
                android:textColor="@color/a"
                android:textSize="25dp"
                android:inputType="textPersonName">
            </EditText>

            <Button
                android:onClick="botonSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondo"
                android:fontFamily="@font/galyon_bold"
                android:textStyle="bold"
                android:text="@string/Aceptar"
                android:textColor="@color/b"
                android:textSize="25dp">
            </Button>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>