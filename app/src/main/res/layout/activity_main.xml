<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/galyon_bold"
                android:text="@string/email"
                android:textColor="@color/a"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/a"
                android:fontFamily="@font/galyon_bold"
                android:textSize="20dp"
                android:textColor="@color/a"
                android:inputType="textEmailAddress">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/galyon_bold"
                android:text="@string/contraseÃ±a"
                android:textColor="@color/a"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="@color/a"
                android:textColor="@color/a"
                android:fontFamily="@font/galyon_bold"
                android:inputType="textPassword"
                android:textSize="20dp">

            </EditText>


            <Button
                android:onClick="iniciosesion"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/boton_redondo"
                android:fontFamily="@font/galyon_bold"
                android:text="@string/Aceptar"
                android:textColor="@color/b"
                android:textSize="20dp"
                android:textStyle="bold">

            </Button>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TableRow>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_marginStart="32dp"
                        android:fontFamily="@font/galyon_bold"
                        android:text="@string/cuenta"
                        android:layout_marginBottom="25dp"
                        android:textColor="@color/a"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/registro"
                        android:layout_height="match_parent"
                        android:layout_marginStart="22dp"
                        android:fontFamily="@font/galyon_bold"
                        android:text="@string/registro_link"
                        android:textColor="@color/a"
                        android:textSize="18sp"
                        android:onClick="registrar">

                    </TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:fontFamily="@font/galyon_bold"
                        android:text="@string/olvido"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/a"
                        android:textSize="16dp">

                    </TextView>

                    <TextView
                        android:id="@+id/olvido"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="22dp"
                        android:fontFamily="@font/galyon_bold"
                        android:text="@string/olvido_link"
                        android:textColor="@color/a"
                        android:textSize="18dp"
                        android:onClick="olvidarContra">

                    </TextView>
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/fb_boton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/boton_redondo"
                        android:fontFamily="@font/galyon_bold"
                        android:text="@string/fb"
                        android:textColor="@color/b"
                        android:textSize="20dp"
                        android:textStyle="bold">
                    </Button>

                    <Button
                        android:id="@+id/google_boton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/boton_redondo"
                        android:fontFamily="@font/galyon_bold"
                        android:text="@string/google"
                        android:textColor="@color/b"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </Button>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>