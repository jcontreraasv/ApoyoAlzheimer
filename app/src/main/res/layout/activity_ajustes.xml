<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAjustes"
    android:background="@color/b">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo">
            </ImageView>

            <FrameLayout
                android:layout_width="310dp"
                android:layout_height="230dp"
                android:layout_marginLeft="50dp"
                android:background="@color/d">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/galyon_bold"
                            android:textStyle="bold"
                            android:text="@string/son"
                            android:textColor="@color/b"
                            android:textSize="35dp">

                        </TextView>

                        <CheckBox
                            android:id="@+id/sonido"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:layout_marginBottom="-30dp"
                            android:button="@drawable/checkbox_selector"
                            android:checked="true">

                        </CheckBox>

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/galyon_bold"
                            android:textStyle="bold"
                            android:text="@string/mus"
                            android:textColor="@color/b"
                            android:textSize="35dp">

                        </TextView>

                        <CheckBox
                            android:id="@+id/musica"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@drawable/checkbox_selector"
                            android:layout_marginLeft="50dp"
                            android:layout_marginBottom="-60dp"
                            android:checked="true">

                        </CheckBox>

                    </TableRow>

                </TableLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>