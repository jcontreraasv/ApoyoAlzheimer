<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".juegos.JuegoOperacionesActivity"
    android:background="@color/d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="50dp"
                android:text="OPERACIONES"
                android:textStyle="bold"
                android:fontFamily="@font/galyon_bold"
                android:textColor="@color/colorBlanco"
                android:textSize="45dp">
            </TextView>

            <TextView
                android:id="@+id/operacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="150dp"
                android:text="5 / 5 = ?"
                android:textStyle="bold"
                android:fontFamily="@font/galyon_bold"
                android:textColor="@color/colorBlanco"
                android:textSize="40dp">
            </TextView>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <Button
                            android:onClick="boton1"
                            android:id="@+id/opcionesOperaciones1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="250dp"
                            android:layout_marginLeft="35dp"
                            android:text="Opcion1"
                            android:textStyle="bold"
                            android:fontFamily="@font/galyon_bold"
                            android:textColor="@color/colorBlanco"
                            android:textSize="25dp">
                        </Button>

                        <Button
                            android:onClick="boton2"
                            android:id="@+id/opcionesOperaciones2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="250dp"
                            android:layout_marginLeft="45dp"
                            android:text="Opcion2"
                            android:textStyle="bold"
                            android:fontFamily="@font/galyon_bold"
                            android:textColor="@color/colorBlanco"
                            android:textSize="25dp">
                        </Button>
                    </TableRow>

                    <TableRow>
                        <Button
                            android:onClick="boton3"
                            android:id="@+id/opcionesOperaciones3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="35dp"
                            android:text="Opcion3"
                            android:textStyle="bold"
                            android:fontFamily="@font/galyon_bold"
                            android:textColor="@color/colorBlanco"
                            android:textSize="25dp">
                        </Button>

                        <Button
                            android:onClick="boton4"
                            android:id="@+id/opcionesOperaciones4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="45dp"
                            android:text="Opcion4"
                            android:textStyle="bold"
                            android:fontFamily="@font/galyon_bold"
                            android:textColor="@color/colorBlanco"
                            android:textSize="25dp">
                        </Button>
                    </TableRow>
                </TableLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>